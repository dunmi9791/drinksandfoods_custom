<!--                                                </td>-->
<!--                                                <td class="text-right o_price_total">-->
<!--                                                    <span t-esc="amount_by_group[1]"-->
<!--                                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>-->
<!--                                                </td>-->
<!--                                            </t>-->
<!--                                        </tr>-->
<!--                                    </t>-->
                                    <tr class="border-black o_total">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="doc.amount_total"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div style="padding-top:20px;">
                        <p style="font-size:11px"><span><strong>Total Amount in words: </strong></span><span t-field="doc.amount_words"/></p>
                          <div class="row" style="margin-top:50px; font-size:10px">
                            <div class="col-6">
                              <hr style="border-top: 1px solid black; width:40%; text-align:right; margin-left:0;"></hr>
